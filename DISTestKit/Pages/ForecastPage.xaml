<UserControl x:Class="DISTestKit.Pages.ForecastPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:DISTestKit.ViewModel">
    <Grid Margin="0,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Margin="0,0,0,10">
            <DatePicker x:Name="DatePicker"
                SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                Margin="0,0,10,0"
                Height="60"
                Width="250"
                VerticalAlignment="Center"/>

            <Button x:Name="TodayButton"
                Tag="{x:Static vm:Period.Today}"
                Content="Today"
                Command="{Binding TodayCommand}"
                MinWidth="50"
                Height="30"
                FontWeight="Bold"
                Style="{StaticResource PeriodButtonStyle}"/>

            <Button x:Name="WeekButton"
                Tag="{x:Static vm:Period.Week}"
                Content="Week"
                Command="{Binding WeekCommand}"
                MinWidth="50"
                Height="30"
                FontWeight="Bold"
                Margin="10,0,0,0"
                Style="{StaticResource PeriodButtonStyle}"/>

            <Button x:Name="MonthButton"
                Tag="{x:Static vm:Period.Month}"
                Content="Month"
                Command="{Binding MonthCommand}"
                MinWidth="50"
                Height="30"
                FontWeight="Bold"
                Margin="10,0,0,0"
                Style="{StaticResource PeriodButtonStyle}"/>

        </StackPanel>

        <!-- Volume chart -->
        <Grid Grid.Row="1" Grid.Column="0">
            <lvc:CartesianChart
              Series="{Binding VolumeSeries}"
              XAxes="{Binding VolumeXAxes}"
              YAxes="{Binding VolumeYAxes}"
              AnimationsSpeed="0:0:0"
              EasingFunction="{x:Null}"
              Background="White" />

            <!-- Insufficient Data Warning Overlay -->
            <Border Background="#F8F9FA"
                    BorderBrush="#E1E1E1"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding ShowInsufficientDataWarning, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ui:SymbolIcon Symbol="Warning20"
                                   Width="48"
                                   Height="48"
                                   Foreground="#FFA500"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16"/>
                    <TextBlock Text="Insufficient Data"
                               FontWeight="Bold"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding InsufficientDataMessage}"
                               FontSize="14"
                               Foreground="#6C757D"
                               TextWrapping="Wrap"
                               MaxWidth="400"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- AI Chat Interface -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
            Background="#FFFFFF" CornerRadius="8" 
            Padding="16" Margin="12,0,0,0" 
            BorderBrush="#E1E1E1" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Analyze by AI" 
                                   FontWeight="Bold" 
                                   FontFamily="Arial" 
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        <ui:SymbolIcon Symbol="Sparkle20" 
                                       Width="25" 
                                       Height="25" 
                                       Foreground="#5084DD"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1"
                            x:Name="ChatMenuButton"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="8"
                            Width="32"
                            Height="32"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Click="ChatMenuButton_Click">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Clear Chat" Command="{Binding ClearChatCommand}">
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="Delete20" Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Button.ContextMenu>
                        <ui:SymbolIcon Symbol="MoreVertical20" 
                                       Width="20" 
                                       Height="20" 
                                       Foreground="#6C757D"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                
                <!-- Chat Messages Area -->
                <ScrollViewer Grid.Row="1" Margin="0,0,0,10" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ListBox x:Name="ChatMessages" 
                             ItemsSource="{Binding ChatMessages}"
                             BorderThickness="0"
                             Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Background}" 
                                        CornerRadius="8" 
                                        Padding="10" 
                                        Margin="5,2"
                                        HorizontalAlignment="{Binding Alignment}">
                                    <TextBlock Text="{Binding Message}" 
                                               TextWrapping="Wrap" 
                                               Foreground="{Binding Foreground}"
                                               FontFamily="Arial"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </ScrollViewer>
                
                <!-- Input Area at Bottom -->
                <Border Grid.Row="2" 
                        BorderBrush="#CCCCCC" 
                        BorderThickness="1" 
                        CornerRadius="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        
                        <!-- Dropdown and Send Button in gray zone at bottom -->
                        <Border Grid.Row="1" 
                                Background="#F8F9FA" 
                                Padding="10,8"
                                BorderBrush="#E1E1E1"
                                BorderThickness="0,1,0,0"
                                MinHeight="50">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <ComboBox Grid.Column="0" 
                                          x:Name="TimePeriodComboBox"
                                          SelectedItem="{Binding SelectedTimePeriod, Mode=TwoWay}"
                                          ItemsSource="{Binding TimePeriods}"
                                          Width="120" 
                                          Height="34"
                                          FontSize="12"
                                          VerticalAlignment="Center"
                                          Margin="0,0,10,0"/>
                                
                                <Button Grid.Column="2" 
                                        Command="{Binding SendMessageCommand}"
                                        IsEnabled="{Binding CanSendMessage}"
                                        Padding="20,8"
                                        MinWidth="80"
                                        Height="34"
                                        Background="#5084DD"
                                        Foreground="White"
                                        BorderThickness="0"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource RoundedButtonStyle}">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="Send" 
                                                   FontFamily="Arial" 
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,6,0"/>
                                        <ui:SymbolIcon Symbol="Send20" 
                                                       Width="16" 
                                                       Height="16" 
                                                       Foreground="White"
                                                       VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>
                        <!-- Text input area -->
                        <TextBox Grid.Row="0" 
                                 x:Name="ChatInput"
                                 Text="{Binding ChatInputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" 
                                 TextWrapping="Wrap"
                                 AcceptsReturn="False"
                                 MinHeight="40"
                                 MaxHeight="80"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalScrollBarVisibility="Auto"
                                 KeyDown="ChatInput_KeyDown"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
