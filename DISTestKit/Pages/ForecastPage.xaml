<UserControl x:Class="DISTestKit.Pages.ForecastPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:DISTestKit.ViewModel">
    <Grid Margin="0,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Margin="0,0,0,10">
            <DatePicker x:Name="DatePicker"
                SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                Margin="0,0,10,0"
                Height="60"
                Width="250"
                VerticalAlignment="Center"/>

            <Button x:Name="TodayButton"
                Tag="{x:Static vm:Period.Today}"
                Content="Today"
                Command="{Binding TodayCommand}"
                MinWidth="50"
                Height="30"
                FontWeight="Bold"
                Style="{StaticResource PeriodButtonStyle}"/>

            <Button x:Name="WeekButton"
                Tag="{x:Static vm:Period.Week}"
                Content="Week"
                Command="{Binding WeekCommand}"
                MinWidth="50"
                Height="30"
                FontWeight="Bold"
                Margin="10,0,0,0"
                Style="{StaticResource PeriodButtonStyle}"/>

            <Button x:Name="MonthButton"
                Tag="{x:Static vm:Period.Month}"
                Content="Month"
                Command="{Binding MonthCommand}"
                MinWidth="50"
                Height="30"
                FontWeight="Bold"
                Margin="10,0,0,0"
                Style="{StaticResource PeriodButtonStyle}"/>
        </StackPanel>

        <!-- Top metrics -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="#F8F9FA" Padding="10" CornerRadius="8" MinHeight="58" Margin="0,0,5,0">
                <StackPanel>
                    <TextBlock Text="Total Volume" FontWeight="SemiBold" FontFamily="Arial"/>
                    <TextBlock Text="{Binding TotalVolumeLastMinute}" FontSize="24" FontFamily="Arial"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Background="#F8F9FA" Padding="10" CornerRadius="8" MinHeight="58" Margin="5,0,0,0">
                <StackPanel>
                    <TextBlock Text="Avg Messages / Sec" FontWeight="SemiBold" FontFamily="Arial"/>
                    <TextBlock Text="{Binding AverageVolumePerSecond}" FontSize="24" FontFamily="Arial"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Volume chart -->
        <lvc:CartesianChart
          Grid.Row="2" Grid.Column="0" Grid.RowSpan="2"
          Series="{Binding VolumeSeries}"
          XAxes="{Binding VolumeXAxes}"
          YAxes="{Binding VolumeYAxes}"
          AnimationsSpeed="0:0:0"
          EasingFunction="{x:Null}" />

        <!-- AI Chat Interface -->
        <Border Grid.Row="0" Grid.RowSpan="4" Grid.Column="1"
            Background="#FFFFFF" CornerRadius="8" 
            Padding="16" Margin="12,0,0,0" 
            BorderBrush="#E1E1E1" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Analyze by AI" 
                               FontWeight="Bold" 
                               FontFamily="Arial" 
                               FontSize="16"
                               VerticalAlignment="Center"/>
                    <ui:SymbolIcon Symbol="Sparkle20" 
                                   Width="25" 
                                   Height="25" 
                                   Foreground="#5084DD"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                </StackPanel>
                
                <!-- Chat Messages Area -->
                <ScrollViewer Grid.Row="1" Margin="0,0,0,10" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ListBox x:Name="ChatMessages" 
                             ItemsSource="{Binding ChatMessages}"
                             BorderThickness="0"
                             Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Background}" 
                                        CornerRadius="8" 
                                        Padding="10" 
                                        Margin="5,2"
                                        HorizontalAlignment="{Binding Alignment}">
                                    <TextBlock Text="{Binding Message}" 
                                               TextWrapping="Wrap" 
                                               Foreground="{Binding Foreground}"
                                               FontFamily="Arial"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </ScrollViewer>
                
                <!-- Input Area at Bottom -->
                <Border Grid.Row="2" 
                        BorderBrush="#CCCCCC" 
                        BorderThickness="1" 
                        CornerRadius="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        
                        <!-- Dropdown and Send Button in gray zone at bottom -->
                        <Border Grid.Row="1" 
                                Background="#F8F9FA" 
                                Padding="10,8"
                                BorderBrush="#E1E1E1"
                                BorderThickness="0,1,0,0"
                                MinHeight="50">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <ComboBox Grid.Column="0" 
                                          x:Name="TimePeriodComboBox"
                                          SelectedItem="{Binding SelectedTimePeriod, Mode=TwoWay}"
                                          ItemsSource="{Binding TimePeriods}"
                                          Width="120" 
                                          Height="34"
                                          FontSize="12"
                                          VerticalAlignment="Center"
                                          Margin="0,0,10,0"/>
                                
                                <Button Grid.Column="2" 
                                        Command="{Binding SendMessageCommand}"
                                        IsEnabled="{Binding CanSendMessage}"
                                        Padding="20,8"
                                        MinWidth="80"
                                        Height="34"
                                        Background="#5084DD"
                                        Foreground="White"
                                        BorderThickness="0"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource RoundedButtonStyle}">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="Send" 
                                                   FontFamily="Arial" 
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,6,0"/>
                                        <ui:SymbolIcon Symbol="Send20" 
                                                       Width="16" 
                                                       Height="16" 
                                                       Foreground="White"
                                                       VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>
                        <!-- Text input area -->
                        <TextBox Grid.Row="0" 
                                 x:Name="ChatInput"
                                 Text="{Binding ChatInputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" 
                                 TextWrapping="Wrap"
                                 AcceptsReturn="False"
                                 MinHeight="40"
                                 MaxHeight="80"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalScrollBarVisibility="Auto"
                                 KeyDown="ChatInput_KeyDown"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
