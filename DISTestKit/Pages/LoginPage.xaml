<UserControl
    x:Class="DISTestKit.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
    Background="Transparent">
  <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
    <StackPanel Width="300">
      <TextBlock 
        Text="Please Sign In" 
        FontSize="20" 
        FontWeight="Bold" 
        Margin="0,0,0,20" 
        HorizontalAlignment="Center"/>
      <TextBlock Text="Email" Margin="0,0,0,4"/>
      <TextBox x:Name="EmailBox" Margin="0,0,0,10"/>
      <TextBlock Text="Password" Margin="0,0,0,4"/>
      <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>
      <Button 
        Content="Login" 
        Click="LoginButton_Click"
        Style="{StaticResource RoundedButtonStyle}"
        Height="30"/>
      <TextBlock 
        HorizontalAlignment="Center" 
        Margin="0,10,0,0">
        <Run Text="Don't have an account? "/>
        <Hyperlink Click="RegisterLink_Click">Register now</Hyperlink>
      </TextBlock>
    </StackPanel>
  </Grid>
</UserControl>
