<UserControl
    x:Class="DISTestKit.Pages.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent">
  <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
    <StackPanel Width="300">
      <TextBlock 
        Text="Create Account" 
        FontSize="20" 
        FontWeight="Bold" 
        Margin="0,0,0,20" 
        HorizontalAlignment="Center"/>
      <TextBlock Text="Name" Margin="0,0,0,4"/>
      <TextBox x:Name="NameBox" Margin="0,0,0,10"/>
      <TextBlock Text="Email" Margin="0,0,0,4"/>
      <TextBox x:Name="EmailBox" Margin="0,0,0,10"/>
      <TextBlock Text="Password" Margin="0,0,0,4"/>
      <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>
      <Button 
        x:Name="RegisterButton"
        Content="Register" 
        Click="RegisterButton_Click"
        Style="{StaticResource RoundedButtonStyle}"
        Height="30"/>
      <TextBlock 
        HorizontalAlignment="Center" 
        Margin="0,10,0,0">
        <Run Text="Already have an account? "/>
        <Hyperlink Click="LoginLink_Click">Login</Hyperlink>
      </TextBlock>
    </StackPanel>
  </Grid>
</UserControl>
